####
# This Containerfile is used in order to build a container that runs the Quarkus application in native (no JVM) mode.
#
# Before building the container image run:
#
# ./mvnw package -Dnative
#
# Then, build the image with:
#
# podman build -f src/main/docker/Containerfile.native -t rhacademy/library-shop-native .
#
# Then run the container using:
#
# podman run -i --rm -p 8080:8080 rhacademy/library-shop-native
#
###
FROM registry.access.redhat.com/ubi9/ubi-minimal:9.5-1731593028

WORKDIR /work/
RUN chown 1001 /work \
    && chmod "g+rwX" /work \
    && chown 1001:root /work
COPY --chown=1001:root target/*-runner /work/application

EXPOSE 8080
USER 1001

ENTRYPOINT ["./application", "-Dquarkus.http.host=0.0.0.0"]
